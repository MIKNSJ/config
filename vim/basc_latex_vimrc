" vim plugins
call plug#begin()
Plug 'lervag/vimtex'
Plug 'preservim/nerdtree'
call plug#end()

" vimtex config
filetype plugin indent on

" let g:vimtex_view_general_viewer = 'SumatraPDF.exe'
let g:vimtex_view_method = 'sioyek'
let g:vimtex_view_sioyek_exe = 'sioyek.exe'

" disable vi compatibility (emulation of old bugs)
set nocompatible

" color theme
colorscheme elflord 

" highlight syntax
syntax on
filetype on
set showmatch

" show file in titlebar
set title

" display line number
set number

set textwidth=80

" set tabs and indentation
set autoindent
set tabstop=4
set expandtab
set shiftwidth=4

" search
set hlsearch
set incsearch
set ignorecase
set smartcase

" enable mouse in all modes
set mouse=a

" colored line ruler
set colorcolumn=80
